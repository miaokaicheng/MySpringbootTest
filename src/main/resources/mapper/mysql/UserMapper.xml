<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mm.mapper.mysql.UserMapper">

    <!-- 根据id查找用户 -->
    <select id="getUserById" resultType="com.mm.dto.User">
        select id,user_name,sex,birthday,email,phone,password,status from t_user where id = #{id}
    </select>

    <!-- 新增用户 -->
    <insert id="saveUser">
        insert into t_user(user_name,sex,birthday,email,phone,password,status) values (#{userName},#{sex},#{birthday},#{email},#{phone},#{password},'1')
    </insert>

    <!-- 获取用户列表 -->
    <select id="getUserList" resultType="com.mm.dto.User">
        select id,user_name,sex,birthday,email,phone,password,status from t_user
    </select>

    <!--删除用户-->
    <delete id="deleteUser">
        delete from t_user where id = #{id}
    </delete>

    <!--更新用户-->
    <update id="updateUser">
        update t_user
        <set>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--根据用户名和邮箱获取用户-->
    <select id="getUserByNameAndEmail" resultType="com.mm.dto.User">
        select id,user_name,sex,birthday,email,phone,password,status from t_user where user_name = #{name} and email = #{email}
    </select>
    
    <!--根据用户名获取用户信息-->
    <select id="getUserByName" resultType="com.mm.dto.User">
        select id,user_name,sex,birthday,email,phone,password,status from t_user where user_name = #{userName}
    </select>
</mapper>
